<!DOCTYPE html>
<html>
<head>
	<title>Register</title>
      <link rel="icon" type="image/ico" href="../images/k.jpg" />
	<% include ./../header/sandstone_styles.ejs %>
</head>
<body>
	<% include ../header/nav.ejs %>
	<form action = "/register" method = "POST" enctype = "multipart/form-data">
			<div class="form-group row" align="center">
      			<label for="username" class="col-sm-3 col-form-label"><h4>Username</h4></label>
      			<div class="col-sm-9">
        			<input type="text" class="form-control" id="username" name="username" placeholder="Enter Username" required="required">
      			</div>

      			<label for="password" class="col-sm-3 col-form-label"><h4>Password</h4></label>
      			<div class="col-sm-9">
        			<input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required="required">
      			</div>

      			<label for="name" class="col-sm-3 col-form-label"><h4>Name</h4></label>
      			<div class="col-sm-9">
        			<input type="name" class="form-control" id="name" name="name" placeholder="Enter Name" required="required">
      			</div>

      			<label for="thumbnail" class="col-sm-3 col-form-label"><h4>Profile Picture</h4></label>
      			<div class="col-sm-9">
        			<input type="file" class="form-control-file" id="thumbnail" name="myImage">
      			</div>
    		</div>
    		<div align="center"><button type="submit" class="btn btn-primary" value="Register">Submit</button></div>
	</form>
	<% include ../footer/sandstone_scripts.ejs %>
</body>
</html>